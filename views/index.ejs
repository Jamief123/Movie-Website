    <div id="carousel">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                <img class="d-block w-100" src="http://image.tmdb.org/t/p/w500<%= data.results[0].backdrop_path %>" alt="First slide">
                </div>
                <% for(var i = 1; i < data.results.length; i++) { %>
                    <div class="carousel-item">
                    <img class="d-block w-100" src="http://image.tmdb.org/t/p/w300<%= data.results[i].backdrop_path %>" alt="Second slide">
                    </div>
                <% };%>
