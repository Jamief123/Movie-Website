<% include ../partials/header %>
<% include ../partials/navbar %>

<div class="container">
        <div class="row">
                <div class="col-md-12">
                    <div class="imgContainerShow">
                        <img src="http://image.tmdb.org/t/p/w1280<%= data.backdrop_path %>" />
                            <div class="movieInfoShow">
                                
                                <div class="movieTitle">
                                 <%= data.original_title %>
                                </div>
                                <div class="movieGenre">
                                    Genre:
                                        <% data.genres.forEach((genre) => { %> 
                                            <span class="genre"></span><%=genre.name%> </span>
                                        <% }); %>
                                        
                                    </div>
                                    <div class="extraInfo">
                                        <p>Release Date: <%= data.release_date %></p>
                                        <p>Runtime: <%= data.runtime %> minutes</p> 
                                        <hr>
                                    </div>

                                <div class="movieDescriptionShow">
                                    <p><%= data.overview %></p>
                                    
                                </div>
                                <div class="movieRating">
                                    rating: <%= data.vote_average %>
                                </div>
                            </div>
                    </div>
                </div>
            </div>

            <br>
            <h3>Cast</h3>
            <hr>
            <br>
                <div class="row">
                    <div class="col-md-6">
                    </div>
                    <div class="col-md-6">
                    </div>
                    <% for(var i = 0; i < 6; i++) {%>
                    <div class="col-sm-6 col-md-2 "></div>
                        <div class="crewMember">
                            <div class="crewMemberPicture">
                                <img src="https://image.tmdb.org/t/p/w138_and_h175_face<%= data.credits.cast[i].profile_path %>"/>
                                </div>
                                <div class="crewMemberName">
                                    <%= data.credits.cast[i].name %>
                                </div>
                            </div>
                            
                        
                    <% } %>
                </div>

                <br>
                <h3>User Reviews</h3>
                <hr>
                <div class="row">
                        <h4>No reviews found. Leave a review</h4>
                    <div>
                        <form action="/reviews/new" method="POST">
                        <input type="text" name ="content" value="content">
                        <input type="hidden" name ="movieId" value="<%= data.id %>"/>
                        <input type="submit" value="submit">    
                        </form>
                    </div>
                        
                    </div>
</div>